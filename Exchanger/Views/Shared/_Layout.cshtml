<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Exchanger - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css" rel="stylesheet"/>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Exchanger.styles.css" asp-append-version="true" />
</head>

<body style="background-color: #121212; margin-bottom: 60px;">

    <header>
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm theme-color-back-bg border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand theme-color-back-text" asp-area="" asp-controller="Home" asp-action="Index">Exchanger</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link theme-color-back-text" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item text-align-right">
                            <div class="d-sm-inline-flex">
                                <a class="nav-link theme-color-back-text d-sm-inline-flex" asp-area="" asp-controller="Account" asp-action="Index">
                                    <i class="nav-bar-item-profile-image fa fa-user" aria-hidden="true"></i>
                                    <div style="margin-left: 5px; margin-right: 5px;">Profile</div>
                                </a>
                                <a class="nav-bar-item-profile-image fa fa-sign-out" style="color: #999999;" aria-hidden="true" asp-area="" asp-controller="Account" asp-action="LogOut"></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-main">
        <main role="main" class="pb-3">@RenderBody()</main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Exchanger - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- MDB -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.js" type="text/javascript"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
