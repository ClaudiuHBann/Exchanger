@model Offer

@{
  ViewData["Title"] = "Create";
}

<h1>Create Offer</h1>
<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control theme-color-front-bg" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group margin-y">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control theme-color-front-bg" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label">Images (imageURL1|imageURL2...|imageURLX)</label>
                <input asp-for="Images" class="form-control theme-color-front-bg" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
  }
