@{
  ViewData["Title"] = "Your Offers";
}

<h2 class="text-center theme-color-front-text">Your Offers For Other Offers</h2>

<ul class="offers">
  @{
    var offersAll = (List<OfferToOfferView>?)ViewData["Offers.YourOther"];
    for (var i = 0; offersAll != null && i < offersAll.Count; i++)
    {
      var offerAllCurrent = offersAll[i];

      <li>
        <img class="offers-li-profile-image" src="~/wwwroot/image/userUnknown.png"/>
        <div class="offers-li-items">@offerAllCurrent.Offer?.Title</div>
        <div class="offers-li-description">@offerAllCurrent.Offer?.Description</div>
        <div class="offers-li-images-container">
          @{
            var images = offerAllCurrent.Offer?.Images.Split('|');
            @for (var j = 0; images != null && j < images.Length; j++)
            {
              <img class="offers-li-images-item" src="@images[j]" />     
            }
          }
        </div>
      </li>

      <li>
        <a class="fa fa-exchange offer-offer-button-exchange" asp-controller="OfferToOffer" asp-action="Exchange" asp-route-id="@offerAllCurrent.Id" aria-hidden="true"></a>
        <a class="fa fa-trash offers-delete" asp-controller="OfferToOffer" asp-action="Delete" asp-route-id="@offerAllCurrent.Id" aria-hidden="true"></a>
      </li>

      <li>
        <img class="offers-li-profile-image" src="~/wwwroot/image/userUnknown.png"/>
        <div class="offers-li-items">@offerAllCurrent.OfferToOffer?.Title</div>
        <div class="offers-li-description">@offerAllCurrent.OfferToOffer?.Description</div>
        <div class="offers-li-images-container">
          @{
            images = offerAllCurrent.OfferToOffer?.Images.Split('|');
            @for (var j = 0; images != null && j < images.Length; j++)
            {
              <img class="offers-li-images-item" src="@images[j]" />     
            }
          }
        </div>
      </li>
    }
  }
</ul>